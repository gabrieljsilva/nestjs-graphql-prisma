generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    @@map("users")
    id              String          @id @default(uuid())
    name            String
    credentials     Credentials?
}

model Credentials {
    @@map("credentials")
    id              String          @id @default(uuid())
    email           String          @unique
    password        String
    user            User            @relation(fields: [user_id], references: [id], onDelete: Cascade)
    user_id         String          @unique
}